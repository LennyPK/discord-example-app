generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  discordId   String   @unique
  // username    UsernameHistory[]
  username    String
  // displayName DisplayNameHistory[]
  displayName String
  wordles     Wordle[]
}

